{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "build/",
    "rootDir": "source/",
    "module": "commonjs",
    "target": "ES2015",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "isolatedModules": true,
    "noErrorTruncation": true,
    "pretty": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bower_components",
    "**/*.test.ts"
  ]
}
